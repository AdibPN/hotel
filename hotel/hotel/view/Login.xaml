<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="hotel.view.Login"
             >
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
            <GradientStop Color="Blue" Offset="0.1"/>
            <GradientStop Color="Purple" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.Content>
        <Frame CornerRadius="10" x:Name="frm_dados" VerticalOptions="CenterAndExpand" BackgroundColor="Transparent">
            <StackLayout>
                
                <Label Text="Login Usuario" TextColor="White" HeightRequest="30" FontSize="Large"/>
                <Label Text="Email:" TextColor="White"/>
                <Entry x:Name="User_email" TextColor="White"/>
                <Label Text="Senha:" TextColor="White"/>
                <Entry IsPassword="True" x:Name="user_pw"/>
                <Button Text="Conectar" Clicked="Button_Clicked" TextColor="White"/>

            </StackLayout>
        </Frame>
    </ContentPage.Content>
    
    
</ContentPage>